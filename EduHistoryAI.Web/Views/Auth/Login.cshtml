@model LoginDto

@{
    ViewData["Title"] = "Login";
}
@section Css {
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



<section id="section-login" class="section-dark no-top no-bottom text-light jarallax relative mh-500 jarallax">
    <img src="~/assets/images/background/3.webp" class="jarallax-img" alt="Login Background">
    @* <div class="gradient-edge-bottom h-50"></div>    <br /> *@
    <br />
    <br />
    <br />
    <div class="sw-overlay op-5"></div>
    @* <div class="abs w-80 bottom-10 z-2 w-100"> *@
    <div class="container">
        <div class="row align-items-center justify-content-center gx-5 mt-4">
            <div class="col-lg-6 col-md-8">
                <div class="card bg-dark text-light rounded-20 p-4 shadow-lg wow fadeInUp" data-wow-delay=".3s">
                    <h2 class="text-center text-uppercase mb-4">Login</h2>

                    <form asp-action="Login" asp-controller="Auth" method="post" class="needs-validation" novalidate>
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control rounded-10 p-3" placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control rounded-10 p-3" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                            <label class="form-check-label" for="RememberMe">Remember Me</label>
                        </div>

                        <button type="submit" class="btn-main fx-slide w-100">Login</button>
                        <div class="form-row">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        </div>
                        <div class="text-center mt-3">
                            <span>Don't have an account?</span>
                            <a asp-controller="Auth" asp-action="Register" class="text-decoration-none">Register</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
    @* </div> *@

    <br />
    <br />
</section>