@model RegisterDto
@{
    ViewData["Title"] = "Register";
}

<section id="section-login" class="section-dark no-top no-bottom text-light jarallax relative mh-500 jarallax">
    <img src="~/assets/images/background/3.webp" class="jarallax-img" alt="Login Background">
    @* <div class="gradient-edge-bottom h-50"></div> *@
    <br />
    <br />
    <br />
    <br />
    <div class="sw-overlay op-5"></div>
    @* <div class="abs w-80 bottom-10 z-2 w-100"> *@
    <div class="container">
        <div class="row align-items-center justify-content-center gx-5 mt-4">
            <div class="col-lg-6 col-md-8">
                <div class="card bg-dark text-light rounded-20 p-4 shadow-lg wow fadeInUp" data-wow-delay=".3s">
                    <h2 class="text-center text-uppercase mb-4">Register New Student</h2>

                    <form asp-action="Register" method="post">
                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label"></label>
                            <input asp-for="FullName" class="form-control rounded-pill" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control rounded-pill" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" type="password" class="form-control rounded-pill" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control rounded-pill" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn-main fx-slide w-100">Register</button>
                        <div class="form-row">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        </div>
                    </form>

                    <div class="text-center mt-3">
                        <span>Already have an account?</span>
                        <a asp-controller="Auth" asp-action="Login" class="text-decoration-none">Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />

    @* </div> *@
</section>











